<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>BRODemy</title>
    <link rel="stylesheet" type="text/css" href="./css/main_style.css">
    <link rel="icon" href="./images/bro_icon.png">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
</head>
<body>
<div id="header">
    <div id="top-bar">
        <!--Main logo of website-->
        <div class="logo">
            <img src="./images/logo_horizontal.png" alt="brodemy" title="brodemy logo" width="100"
                 onclick="window.location='/';">
        </div>
        <!--Main maineu of website-->
        <div class="main-menu">
            <ul>
                <li>Catálogo
                    <ul class="sub-menu">
                        <li>Software
                            <ul class="sub-menu-1">
                                <li>C++</li>
                                <li>Java</li>
                                <li>Python</li>
                                <li>Javascript</li>
                                <li>BIRL</li>

                            </ul>
                        </li>
                        <li>Banco De Dados
                            <ul class="sub-menu-1">
                                <li>MySQL</li>
                                <li>PostgreSQL</li>
                                <li>MongoDB</li>
                            </ul>
                        </li>
                        <li>Engenharia
                            <ul class="sub-menu-1">
                                <li>Cálculo</li>
                                <li>Física</li>
                                <li>Eletrônica</li>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <!--search bar of website-->
        <div class="search-box">
            <input id="toSearch" name="toSearch" type="text" placeholder="Buscar">
            <input id="search-button" class="top-bar-btn" type="button" value="Buscar"
                   onclick="sendToResearch()">
            <% if(user.autorizado){ %>
            <input class="top-bar-btn" type="button" name="account-btn" value="Torne-se um instrutor"
                   onclick="window.location='/my_couses_manage';">
            <input class="top-bar-btn" type="button" name="account-btn" value="Minha Conta"
                   onclick="window.location='/my_account';">
            <input class="top-bar-btn" type="button" name="courses-btn" value="Meus Cursos"
                   onclick="window.location='/my_courses';">
            <% }else{ %>
            <input class="top-bar-btn" type="button" name="account-btn" value="Sign in"
                   onclick="window.location='/login';">
            <% } %>
        </div>
    </div>
</div>

<% if(inform.length > 0){ %>
<% for(var i = 0; i < inform.length; i++) { %>

<div class="course-display" onclick="window.location='/course/<%= inform[i].course[0]._id; %>'">
    <div class="course-img">
        <img src="<%= inform[i].course[0].image_src %>" height="135" width="240">
    </div>
    <div class="course-content">
        <h3 id="course-title"><%= inform[i].course[0].title %></h3>
        <p><%= inform[i].course[0].description %></p>
    </div>
</div>
<% } %>
<% }else { %>
<div class="info-box">
    <p id='no-courses-error'><strong>Nenhum curso encontrado</strong></p>
</div>
<% } %>

<script type="text/javascript">
    function sendToResearch(){
        console.log("yo")
        let data = document.getElementById("toSearch").value;
        if (data == '')
            return;
        let url = "http://localhost:8080/courses/" + data;
        window.location.href = url;
    }
</script>

</body>
</html>
