<!DOCTYPE html>
<html>
<head>
    <title>BRODemy</title>
    <link rel="stylesheet" type="text/css" href="./css/main_style.css">
</head>
<body>
<%- include ../navbar.ejs %>

<% if(inform.length > 0){ %>
<% for(var i = 0; i < inform.length; i++) { %>

<div class="course-display" onclick="window.location='/course/<%= inform[i].course[0]._id; %>'">
    <div class="course-img">
        <img src="<%= inform[i].course[0].image_src %>" height="135" width="240">
    </div>
    <div class="course-content">
        <h3 id="course-title"><%= inform[i].course[0].title %></h3>
        <p><%= inform[i].course[0].description %></p>
    </div>
</div>
<% } %>
<% }else { %>
<div class="info-box">
    <p id='no-courses-error'><strong>Nenhum curso encontrado</strong></p>
</div>
<% } %>

<script type="text/javascript">
    function sendToResearch(){
        console.log("yo")
        let data = document.getElementById("toSearch").value;
        if (data == '')
            return;
        let url = "http://localhost:8080/courses/" + data;
        window.location.href = url;
    }
</script>

</body>
</html>
