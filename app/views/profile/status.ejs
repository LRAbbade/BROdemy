<!DOCTYPE html>
<html>
<head>
    <title>BRODemy</title>
    <link rel="stylesheet" type="text/css" href="./css/style.css">
</head>
<body>
<%- include ../navbar.ejs %>
<% if(validacao.length > 0){ %>
<div class="info-box">
    <p id="no-courses-error"><strong><%= validacao[0].msg %></strong></p>
</div>
<% } %>
<div class="container">
    <div class="jumbotron center-align" id="formulario">
        <div class="txt">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <p>nome:<%= user.name %></p>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <p>nome:<%= user.email %></p>
                </div>
                <div class="input-field col s6">
                    <button class="btn   blue darken-2 center" id="Login"
                            onclick="window.location='/change_email';">change email
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn   blue darken-2 center" id="Login"
                            onclick="window.location='/change_password';">change password
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn   blue darken-2 center" id="Login"
                            onclick="window.location='/delete_account';">delete account
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn   blue darken-2 center" id="Login" onclick="window.location='/logout';">
                        logout
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>


<script type="text/javascript">
    function sendToResearch() {
        console.log("yo")
        let data = document.getElementById("toSearch").value;
        if (data == '')
            return;
        let url = "http://localhost:8080/courses/" + data;
        window.location.href = url;
    }
</script>

</body>
</html>
