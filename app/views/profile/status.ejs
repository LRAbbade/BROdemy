<!DOCTYPE html>
<html>
<head>
    <title>Minha Conta</title>
    <link rel="stylesheet" type="text/css" href="./css/login_style.css">
    <link rel="icon" href="./images/bro_icon.png">
</head>
<body>
<%- include ../navbar.ejs %>
<% if(validacao.length > 0){ %>
<div class="info-box">
    <p id="no-courses-error"><strong><%= validacao[0].msg %></strong></p>
</div>
<% } %>
<div class="info-box">
    <div class="row">
        <i class="material-icons prefix">account_circle</i>
        <p>nome:<%= user.name %></p>
    </div>
    <div class="row">
        <i class="material-icons prefix">account_circle</i>
        <p>nome:<%= user.email %></p>
    </div>
    <div class="row">
        <button class="std-btn" id="Login" value="Mudar Senha"
                onclick="window.location='/change_password';">
        </button>
    </div>
    <div class="row">
        <button class="std-btn" id="Login" value="Apagar Conta"
                onclick="window.location='/delete_account';">
        </button>
    </div>
    <div class="row">
            <button class="std-btn" id="Login" value="Logout"
                    onclick="window.location='/logout';">
            </button>
    </div>
</div>

<script type="text/javascript">
    function sendToResearch() {
        console.log("yo")
        let data = document.getElementById("toSearch").value;
        if (data == '')
            return;
        let url = "http://localhost:8080/courses/" + data;
        window.location.href = url;
    }
</script>

</body>
</html>
