<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>BRODemy</title>
    <link rel="stylesheet" type="text/css" href="./css/style.css">
    <link rel="icon" href="./images/bro_icon.png">
    
</head>
<body>
<div id="header">
    <div id="top-bar">
        <!--Main logo of website-->
        <div class="logo">
            <img src="./images/logo_horizontal.png" alt="brodemy" title="brodemy logo" width="100" onclick="window.location='/';">
        </div>
        <!--Main maineu of website-->
        <div class="main-menu">
            <ul>
                <li>Catálogo
                    <ul class="sub-menu">
                        <li>Software
                            <ul class="sub-menu-1">
                                <li>C++</li>
                                <li>Java</li>
                                <li>Python</li>
                                <li>Javascript</li>
                                <li>BIRL</li>

                            </ul>
                        </li>
                        <li>Banco De Dados
                            <ul class="sub-menu-1">
                                <li>MySQL</li>
                                <li>PostgreSQL</li>
                                <li>MongoDB</li>
                            </ul>
                        </li>
                        <li>Engenharia
                            <ul class="sub-menu-1">
                                <li>Cálculo</li>
                                <li>Física</li>
                                <li>Eletrônica</li>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <!--search bar of website-->
        <div class="search-box">
            <input type="text" placeholder="Buscar">
            <input id="search-button" class="top-bar-btn" type="button" name="search-btn" value="Buscar">

            <% if(user.autorizado){ %>
            <input class="top-bar-btn" type="button" name="account-btn" value="Minha Conta" onclick="window.location='/my_accout';">
            <input class="top-bar-btn" type="button" name="courses-btn" value="Meus Cursos" onclick="window.location='/my_courses';">
            <% } else { %>
            <input class="top-bar-btn" type="button" name="account-btn" value="Sign in"
                   onclick="window.location='/login';">
            <% } %>
        </div>
    </div>

    <% if(courses.length > 0){ %>
    <% for(var i = 0; i < courses.length; i++) { %>
    <div class="course-display">
        <div class="course-img">
            <img src="<%= courses[i].image_src %>" height="135" width="240">
        </div>
        <div class="course-content">
            <h3><%= courses[i].title %></h3>
            <h4><%= courses[i].description %></h4>
        </div>
    </div>
    <% } %>
    <% }else { %>

    <p> Nenhum curso cadastrado</p>
    <% } %>
</div>
</body>
</html>
