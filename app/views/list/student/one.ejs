<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>$Title$</title>
    <link href ="css/style.css" rel="styleseet">

    <!-- carregando icones -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- materialize -->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection"/>
</head>
<body>

<div class="container" id="formulario">

    <% if(validacao.length > 0){ %>

    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger">
                <strong>Atenção!</strong>
                <ul>
                    <% for(var i = 0; i < validacao.length ;i++) { %>
                    <li><%= validacao[i].msg %></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    <% } %>

    <div class="row">
        <form action="/register_student" method="post">
            <div class="col-md-12">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="nome" name="nome" type="text" value="<%= student.nome %>" class="validate">
                        <label class="active" for="nome">Nome</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">vpn_key</i>
                        <input id="password" name="password" type="password" value="<%= student.password %>"
                               class="validate">
                        <label class="active" for="password">password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">email</i>
                        <input id="email" name="email" type="email" value="<%= student.nome %>" class="validate">
                        <label class="active" for="email">Email</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Cadastrar</button>
        </form>
    </div>
</div>
<script type="text/javascript" src="js/materialize.min.js"></script>
</body>
</html>
