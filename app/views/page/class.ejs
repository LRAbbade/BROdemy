	<div class='info-box'>
		<iframe width="560" height="315" src="<%=classes.url%>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
	</div>

	<script type="text/javascript">
	    function sendToResearch(){
	        console.log("yo")
	        let data = document.getElementById("toSearch").value;
	        if (data == '')
	            return;
	        let url = "http://localhost:8080/courses/" + data;
	        window.location.href = url;
	    }
	</script>

