<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Datian Main</title>
    <script src="js/jquery-2.2.1.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <!-- bootstrap - link cdn -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
          integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <!-- carregando icones -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- incluindo css -->
    <link href="css/style.css" rel="stylesheet">

    <link rel="icon" href="./images/bro_icon.png">
</head>
<body>
<div id="header">
    <div id="top-bar">
        <!--Main logo of website-->
        <div class="logo">
            <img src="./images/logo_horizontal.png" alt="brodemy" title="brodemy logo" width="100"
                 onclick="window.location='/';">
        </div>
        <!--Main maineu of website-->
        <div class="main-menu">
            <ul>
                <li>Catálogo
                    <ul class="sub-menu">
                        <li>Software
                            <ul class="sub-menu-1">
                                <li>C++</li>
                                <li>Java</li>
                                <li>Python</li>
                                <li>Javascript</li>
                                <li>BIRL</li>

                            </ul>
                        </li>
                        <li>Banco De Dados
                            <ul class="sub-menu-1">
                                <li>MySQL</li>
                                <li>PostgreSQL</li>
                                <li>MongoDB</li>
                            </ul>
                        </li>
                        <li>Engenharia
                            <ul class="sub-menu-1">
                                <li>Cálculo</li>
                                <li>Física</li>
                                <li>Eletrônica</li>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <!--search bar of website-->
        <div class="search-box">
            <form action="/course_search" method="post">
                <input name="toSearch" type="text" placeholder="Buscar">
                <input id="search-button" class="top-bar-btn" type="submit">
            </form>
            <% if(user.autorizado){ %>
            <input class="top-bar-btn" type="button" name="account-btn" value="Torne-se um instrutor"
                   onclick="window.location='/my_couses_manage';">
            <input class="top-bar-btn" type="button" name="account-btn" value="Minha Conta"
                   onclick="window.location='/my_account';">
            <input class="top-bar-btn" type="button" name="courses-btn" value="Meus Cursos"
                   onclick="window.location='/my_courses';">
            <% }else{ %>
            <input class="top-bar-btn" type="button" name="account-btn" value="Sign in"
                   onclick="window.location='/login';">
            <% } %>
        </div>
    </div>
</div>

<% if(validacao.length > 0){ %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger">
                <strong><%= validacao[0].msg %></strong>
            </div>
        </div>
    </div>
</div>
<% } %>

<div class="container">
    <form action="/login" method="post">
        <div class="jumbotron center-align" id="formulario">
            <div class="txt">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="email" name="email" type="email" value="<%= login.email %>" class="validate">
                        <label class="active" for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">vpn_key</i>
                        <input id="password" name="password" type="password" value="<%= login.password %>"
                               class="validate">
                        <label class="active" for="pwd">password</label>
                    </div>
                </div>

            </div>
            <button type="submit" class="btn   blue darken-2 center" id="Login">Login</button>
            <div class="space divider"></div>
            <p class="space center-align">não tem uma conta?<a href="/register_user">cadastre-se</a></p>
        </div>
    </form>
</div>
</body>
</html>
